{
    "name": "ngif",
    "version": "2.3.48-beta",
    "description": "A fast and simple way to view gifs!",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-packager . nGIF --platform=linux win32 darwin --arch=x64 --asar",
        "dist": "electron-builder build",
        "win-unpack": "electron-builder --dir"
    },
    "repository": "https://github.com/NovaAppsInc/nGIF",
    "license": "MIT",
    "author": "Zell Apps",
    "devDependencies": {
        "electron": "^16.0.2",
        "electron-builder": "^22.14.5",
        "electron-packager": "^15.4.0"
    },
    "build": {
        "appId": "com.zellapps.ngif",
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico",
            "publish": [
                "github",
                "bintray"
            ]
        },
        "mac": {
            "target": "pkg",
            "icon": "build/icon.ico"
        },
        "linux": {
            "target": "deb",
            "icon": "build/icon.ico"
        }
    },
    "dependencies": {
        "update-electron-app": "^2.0.1"
    }
}
