{
    "name": "nGIF",
    "version": "2.3.51-beta",
    "description": "A fast and simple way to view gifs!",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-packager . nGIF --platform=linux win32 darwin --arch=x64 --asar",
        "dist": "electron-builder build",
        "lin": "electron-builder --linux snap",
        "win-unpack": "electron-builder --dir",
        "pub": "electron-builder --x64 --publish always"
    },
    "repository": "https://github.com/NovaAppsInc/nGIF",
    "license": "MIT",
    "author": "Zell Apps",
    "devDependencies": {
        "electron": "^16.0.2",
        "electron-builder": "^22.14.5",
        "electron-installer-snap": "^5.1.0",
        "electron-packager": "^15.4.0"
    },
    "build": {
        "appId": "com.zellapps.nGIF",
        "win": {
            "asar": true,
            "legalTrademarks": "(c) 2021 Zell Apps",
            "publisherName": "Zell Apps",
            "target": "nsis",
            "icon": "icon.png",
            "publish": [
                "github",
                "bintray"
            ]
        },
        "nsis": {
            "installerIcon": "icon.png",
            "uninstallerIcon": "icon.png",
            "license": "LICENSE",
            "allowToChangeInstallationDirectory": true,
            "oneClick": false,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "multiLanguageInstaller": true,
            "displayLanguageSelector": true
        },
        "mac": {
            "target": "pkg",
            "icon": "icon.png"
        },
        "linux": {
            "target": "deb",
            "icon": "icon.png"
        }
    },
    "dependencies": {
        "ansi-regex": "^6.0.1",
        "auto": "^10.32.3",
        "electron-builder-squirrel-windows": "^22.14.10",
        "node-fetch": "^2.6.1",
        "update-electron-app": "^2.0.1"
    }
}
